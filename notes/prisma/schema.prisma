generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and profile management
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  avatar    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  courses   CourseEnrollment[]
  notes     Note[]
  folders   Folder[]
  tags      Tag[]
}

// Course model for organizing notes by subject/course
model Course {
  id        Int       @id @default(autoincrement())
  title     String
  code      String    @unique
  description String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  enrollments CourseEnrollment[]
  notes       Note[]
}

// CourseEnrollment model for user-course relationships
model CourseEnrollment {
  id        Int       @id @default(autoincrement())
  userId    Int
  courseId  Int
  enrolledAt DateTime  @default(now())
  
  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
}

// Folder model for organizing notes hierarchically
model Folder {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes     Note[]
}

// Note model for storing user notes
model Note {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  userId    Int
  courseId  Int
  folderId  Int?
  isPinned  Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  folder    Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)
  tags      TagOnNote[]
}

// Tag model for categorizing notes
model Tag {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime  @default(now())
  
  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes     TagOnNote[]
  
  @@unique([userId, name])
}

// TagOnNote model for many-to-many relationship between notes and tags
model TagOnNote {
  id        Int       @id @default(autoincrement())
  noteId    Int
  tagId     Int
  
  // Relations
  note      Note      @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@unique([noteId, tagId])
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}


datasource db {
  provider = "postgresql"
}


model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  subjects  Subject[]
  notes     Note[]
  shared    SharedNote[]
}

model Subject {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  folders   Folder[]
  notes     Note[]

  @@unique([name, userId])
}

model Folder {
  id        Int       @id @default(autoincrement())
  name      String
  subjectId Int
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  notes     Note[]

  @@unique([name, subjectId])
}

model Note {
  id        Int       @id @default(autoincrement())
  title     String
  content   String    @db.Text
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjectId Int
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  folderId  Int?
  folder    Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  tags      NoteTag[]
  shares    SharedNote[]

  @@index([userId])
  @@index([subjectId])
  @@index([folderId])
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())

  notes     NoteTag[]
}

model NoteTag {
  noteId    Int
  tagId     Int
  note      Note      @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
}

model SharedNote {
  id        Int       @id @default(autoincrement())
  noteId    Int
  userId    Int
  note      Note      @relation(fields: [noteId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())

  @@unique([noteId, userId])
}
